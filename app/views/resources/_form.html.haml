= form_for @resource do |f|
  = f.error_messages

  .field
    =f.label :path
    =f.text_field :path

  .field
    = f.label :title, 'Title of Idea:'
    %br
    = f.text_field :title, placeholder:'Title', class: 'title'

  .field
    = f.label :content, 'Content of Idea:'
    %br
    = f.text_area :content, cols: 80, placeholder: 'Put your ideas in this box!', class: 'description'

  .actions
    = f.submit
